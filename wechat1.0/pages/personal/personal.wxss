/*字母列表*/
.letter-item {
  width: 52rpx;
  height: 385px;
  background-color: #fff;
  position: fixed;
  top: 69%;
  right: 10rpx;
  transform: translate(0, -50%);
  box-shadow: 0 2px 6px 0 rgba(0, 0, 0, 0.15);
  border-radius:200rpx;
  padding: 26rpx 0;
  box-sizing: border-box;
}


.letter-none {
  display: none;
}

.letter-block {
  display: block;
}

.flex-item {
  width: 100%;
  height: 100px;
  box-sizing: border-box;
}


  /* 没用？*/
.letter-hover {
  position: fixed;
  width: 20px;
  height: 370px;
  top: 54%;
  right: 26rpx;
  transform: translate(0, -50%);
  border-radius: 7px;
  /*  background: rgba(0, 0, 0, 0.2);*/
  background: rgba(0, 0, 0, 0.2);
}

.letter-li {
  display: flex;
  align-items: center;
  justify-content: center;
  background: transparent;
  font-size:28rpx;
  color:#999;
  line-height:32rpx; 
}

.add-color {
  color:#33adff;
  font-weight: bold;
  font-size:35rpx;
}

.letter-li.five {
  width: 22rpx;
  height: 20rpx;
}

.letter-li:target {
  color: red;
}

