/* 标签切换--S */

.swiper-head {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #444;
  background: #fff;
  border-bottom: solid 1rpx #e8e8e8;
  border-top: solid 1rpx #e8e8e8;
}

.swiper-head-item:first-child {
  width: 50%;
  border-right: solid 1rpx #e8e8e8;
}

.swiper-head-item:last-child {
  width: 50%;
}

.on {
  color: #3572ce;
}

.swiper-content {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

