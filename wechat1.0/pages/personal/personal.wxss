/**personal.wxss**/

 
 /* 个人中心  */
 .head{
   width: 100%;
   height: 320rpx;
   background:linear-gradient(-180deg, rgba(79, 155, 255, 0.75) 7%, rgba(123,196,237, 0.735) 100%);
   text-align: center;
 }
 .head-img{
    width: 160rpx;
    height: 160rpx;
    border-radius: 50%;
    display: inline-block;
    margin-top: 60rpx;
    overflow: hidden;
 }
 .head-name{
   color: #fff;
   font-size: 36rpx;
   line-height: 60rpx;
 }
 

  /* 车型对比 */
 .section{
   /* height: 100%; */
    margin-top: 30rpx;
    margin-bottom: 25rpx;
    background-color: #f8f8f8;
    box-shadow: 30rpx 10rpx 50rpx 10rpx  rgb(235, 235, 235);
 }
 .list{
   background-color: #fff;
   margin-bottom: 0rpx;
 }
.list-column{
   display: -webkit-box;
   -webkit-box-orient: horizontal;
   height: 120rpx;
   line-height: 120rpx;
   padding: 0 30rpx;
   border-bottom: 1px solid #fafafa;
 }
 .list-column-intro{
   -webkit-box-flex: 1;
 }
.list-column-intro image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  vertical-align: middle;
  margin-bottom: 10rpx;
}
.list-column-intro text{
  font-size: 34rpx;
  color: #333333;
}
.list-column-next image{
  width: 30rpx;
  height: 40rpx;
}
.list-column-next text{
  height: 40rpx;
  min-width: 40rpx;
  line-height: 40rpx;
  display: inline-block;
  background: #ff3333;
  text-align: center;
  font-size: 28rpx;
  border-radius: 50%; 
  color: #fff;
  margin-right: 14rpx;
}





/* 车型库 */




