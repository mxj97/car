/* 百度百科车型详细信息外框 */
.baikeinfo{
  margin:15rpx 40rpx;
  display: flex;
  flex-direction: row;
  box-shadow:6rpx 6rpx 20rpx 8rpx rgb(242,242,242);
}

/* 百度百科车型详细信息外框 */
.baikecard{
display: flex;
flex-direction: column;
color: #fff;
text-align: center;
}

/* 车型详细信息（小字） */
.baikecontent{
overflow:hidden;
text-overflow:ellipsis;
-webkit-box-orient:vertical;
-webkit-line-clamp:2;
font-size:24rpx;
color:#858585;
margin:0rpx 40rpx ;
line-height:40rpx;
}

/* “点击了解更多参数”外框 */
.baikeform{
  font-size: 20rpx;
  color: #c0c0c0;
  background-color: transparent;
  border-top: 1rpx solid #eeeeee;
  margin:30rpx 40rpx 0rpx 40rpx;
  padding: 18rpx;
}

/* 点击了解更多参数 */
.baikeformore{ 
	width:100%; 
	height: 50rpx;  
  font-size: 24rpx;
  text-align: center;
	background-color: transparent;   /*按钮透明*/  
	border:none;				/*设置按钮边框*/
  color: #c0c0c0;
}
.baikeformore::after{
	border:none;
}

/* 拍照/选取图片识别 */
.up {
  color: rgb(255, 255, 255);
  font-size: 16px;
  font-family: 微软雅黑;
  width: 200px;
  height: 50px;
  display:flex;   /* 弹性布局 */
  justify-content:center;   /* 居中对齐 */
  flex-direction: row;    /* row（默认值）：主轴为水平方向，起点在左端。 */
  vertical-align: middle;
  text-align: center;
  line-height: 45px;
  border-radius: 25px;    /* button按钮的边缘弧度 */
  background-color: #7bc4ed;
}
